<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/checkplace_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="8dp"
        android:paddingBottom="2dp"
        android:text="Tárhely ellenőrzés"
        android:background="@color/headerColor"
        android:textColor="@color/whiteColor"
        android:gravity="center"/>
    <TextView
        android:id="@+id/checkplace_worknum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Munkaszám: 000000"
        android:background="@color/headerColor"
        android:textColor="@color/whiteColor"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/checkplace_query_panel1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/checkplace_wh_header_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:text="Raktár:"
            />
        <Button
            android:id="@+id/checkplace_wh_header_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/secondColor"
            android:textColor="@color/whiteColor"
            android:layout_marginBottom="0dp"
            android:text="Válasszon raktárat"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/checkplace_query_panel2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/checkplace_header_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:text="Tárhely:"
            />
        <EditText
            android:layout_weight="1"
            android:id="@+id/checkplace_header_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:focusable="true"
            android:background="@drawable/logintext_et_shape_round"
            />
        <Button
            android:id="@+id/checkplace_header_delbtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondColor"
            android:textColor="@color/whiteColor"
            android:text="X"/>
        <Button
            android:id="@+id/checkplace_header_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/secondColor"
            android:textColor="@color/whiteColor"
            android:layout_marginBottom="0dp"
            android:text="-->"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/checkplace_query_panel3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/checkplace_EAN_header_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:text="Vonalkód:"
            />
        <EditText
            android:layout_weight="1"
            android:id="@+id/checkplace_EAN_header_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:focusable="true"
            android:background="@drawable/logintext_et_shape_round"
            />
        <Button
            android:id="@+id/checkplace_EAN_header_delbtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondColor"
            android:textColor="@color/whiteColor"
            android:text="X"/>
        <Button
            android:id="@+id/checkplace_EAN_header_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/secondColor"
            android:textColor="@color/whiteColor"
            android:layout_marginBottom="0dp"
            android:text="-->"
            />
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/checkplace_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@color/secondColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <android.support.v4.view.ViewPager
        android:id="@+id/checkplace_viewpager"
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingBottom="6dp"
        android:orientation="horizontal">
        <ImageButton
            android:src="@drawable/but_cancel_44x44"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_marginStart="10dp"
            android:id="@+id/checkplace_flushBtn"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:text="ElDOBÁS"/>
        <ImageButton
            android:src="@drawable/but_save_44x44"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_marginStart="10dp"
            android:id="@+id/checkplace_saveBtn"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:text="ElDOBÁS"/>
    </LinearLayout>
</LinearLayout>