<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/row_line_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/row_line_check"
            android:layout_width="30dp"
            android:background="@drawable/tablepanel_row_back1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/row_line_sumpcs"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:background="@drawable/tablepanel_row_back"
            android:text="1"/>
        <TextView
            android:id="@+id/row_line_pcs"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/tablepanel_row_back"
            android:text="1"/>
        <TextView
            android:id="@+id/row_line_weight"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:textSize="12sp"
            android:gravity="center_vertical|right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tablepanel_row_back"
            android:text="100"/>
        <TextView
            android:id="@+id/row_line_length"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center_vertical|right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:background="@drawable/tablepanel_row_back"
            android:text="200"/>
        <TextView
            android:id="@+id/row_line_width"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tablepanel_row_back"
            android:text="300"/>
        <TextView
            android:id="@+id/row_line_height"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tablepanel_row_back"
            android:text="400"/>
        <TextView
            android:id="@+id/row_line_toplace"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:textSize="12sp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/tablepanel_row_back"
            android:text="400"/>
        <ImageView
            android:id="@+id/row_line_del"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/row_del"/>


    </LinearLayout>
</LinearLayout>