<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:ignore="MissingDefaultResource"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteColor"
        android:orientation="vertical">
    <TextView
        android:id="@+id/transphoto_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/headerColor"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Fénykép hozzáadás"
        android:textColor="@color/whiteColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transphoto_header"/>

    <ImageView
            android:id="@+id/transphoto_camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/camera"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/transphoto_header"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:id="@+id/taskphoto_file"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/camera_folder"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/transphoto_camera"
            app:layout_constraintEnd_toEndOf="@+id/transphoto_camera"
            android:layout_marginStart="8dp"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/transphoto_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_back"
            app:layout_constraintTop_toBottomOf="@+id/transphoto_header"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
        android:src="@drawable/but_ok_44x44"
        android:layout_weight="3"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/transphoto_upload"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="ElDOBÁS"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/transphoto_exit"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:src="@drawable/but_cancel_44x44"
        android:layout_weight="3"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/transphoto_exit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="ElDOBÁS"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>