<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/moves_tableRoot">
    <TextView
        android:id="@+id/moves_headertext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Feladat kiválasztása"
        android:background="@color/headerColor"
        android:textColor="@color/whiteColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/moves_mainLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/moves_headertext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:id="@+id/moves_btncontainer"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:background="@color/headerColor"
        android:orientation="vertical"
        android:paddingLeft="7dp"
        app:layout_constraintTop_toBottomOf="@id/moves_headertext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageButton
            android:src="@drawable/but_ean_44x44"
            android:background="@null"
            android:scaleType="fitCenter"
            android:id="@+id/moves_selectBtn"
            android:layout_marginBottom="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="Vonalkód összehasonlítás"/>
        <ImageButton
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/but_download_44x44"
            android:id="@+id/moves_selectBtn1"
            android:layout_marginBottom="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="Mozgás adatok betöltése"/>
        <ImageButton
            android:src="@drawable/but_cancel_44x44"
            android:id="@+id/moves_backBtn"
            android:layout_marginBottom="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:text="X"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>